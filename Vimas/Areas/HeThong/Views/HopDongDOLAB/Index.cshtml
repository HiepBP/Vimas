
@{
    var user = HttpContext.Current.User;
    ViewBag.Title = "Hợp đồng DOLAB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-8">
                <h3>Danh sách hợp đồng DOLAB</h3>
            </div>
            @if (user.IsInRole("Admin") || user.IsInRole("PhongXKLD"))
            {
                <div class="col-md-4">
                    <a href="@this.Url.Action("Create")" class="btn btn-primary pull-right ">
                        <i class="left-icon glyphicon glyphicon-plus"></i>   Thêm hợp đồng
                    </a>
                </div>
            }
        </div>
        <hr />
    </div>
    <div class="card-padding">
        <div id="datatable">
            <table id="DOLABDatatable" class="table table-striped table-bordered table-hover" style="width: 100% !important">
                <thead style="white-space: nowrap; text-overflow: ellipsis;">
                    <tr>
                        <th>
                            <label>Số đăng ký hợp đồng</label>
                        </th>
                        <th>
                            <label class="">Số công văn</label>
                        </th>
                        <th>
                            <label class="">Số phiếu tiếp nhận</label>
                        </th>
                        <th>
                            <label class="">Ngày đăng ký</label>
                        </th>
                        <th>
                            <label class="">Ngày nhận</label>
                        </th>
                        <th>
                            <label class=""></label>
                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        InitOrderDatatable();
    });
    function InitOrderDatatable() {
        $("#DOLABDatatable").dataTable({
            "bSort": false,
            "bRetrieve": true,
            "bServerSide": true,
            "bScrollCollapse": true,
            "sAjaxSource": "@Url.Action("LoadDanhSachDOLAB")",
            "bProcessing": true,
            "iDisplayLength": 10,
            "aLengthMenu": [10, 25, 50],
            "oLanguage": {
                "sSearch": "Tìm kiếm:",
                "sZeroRecords": "Không có dữ liệu phù hợp",
                "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                "sEmptyTable": "Không có dữ liệu",
                "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                "sLengthMenu": "Hiển thị _MENU_ dòng",
                "sProcessing": "Đang xử lý...",
                "oPaginate": {
                    "sNext": "<i class='fa fa-chevron-right'></i>",
                    "sPrevious": "<i class='fa fa-chevron-left'></i>"
                }
            },
            "aoColumnDefs": [
                {
                    "aTargets": [0, 1, 2, 3, 4],
                    "bSortable": false
                },
                {
                    "aTargets": [5],
                    "mRender": function (data, type, o) {
                        var data = o[5];
                        @if (user.IsInRole("Admin") || user.IsInRole("PhongXKLD"))
                        {
                                <text>
                                var detail = "<a id='detailDOLAB' class='btn btn-sm btn-primary' href='@Url.Action("Detail", "TrungTamGTVL")\/" + data + "\'><i class='fa fa-eye'></i> Detail</a>";
                                var del = "<a id='deleteDOLAB' class='btn btn-sm btn-danger' onClick='Delete(" + data + ")'><i class='glyphicon glyphicon-trash'></i> Delete</a>";
                                var edit = "<a id='editDOLAB' class='btn btn-sm btn-primary' href='@Url.Action("Edit", "TrungTamGTVL")\/" + data + "\'><i class='glyphicon glyphicon-pencil'></i> Edit</a>";
                                </text>
                         }
                        else
                        {
                            <text>
                            var detail = "";
                            var edit = "";
                            var del = "";
                            </text>
                        }
                        return detail + " " + edit + " " + del;
                    }
                }

            ],
            "bAutoWidth": false
        }).fnSetFilteringDelay(delaySearchDb);
    }

    function Delete(id) {
        if (confirm("Bạn có chắc xóa dòng này?")) {
            $.ajax({
                url: '@this.Url.Action("Delete")',
                data: { id},
                        method: "POST",
                success: function (result) {
                    alert(result.message);
                    RefreshDOLABDatatable()
                },
                error: function (error) {
                    alert(error.message);
                }
            });
        }
    }

    function RefreshDOLABDatatable() {
        var oTable = $('#trungTamDataTable').dataTable();
        oTable._fnPageChange(0);
        oTable._fnAjaxUpdate();
    }

</script>

